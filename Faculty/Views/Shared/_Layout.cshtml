<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Img/Icons/laptop.png" type="image/x-icon" rel="shortcut icon" />
</head>

<body>
    <div class="navbar  bg-col container-fluid  navbar-expand-md navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle menu" data-toggle="collapse" data-target=".navbar-collapse">
                    <img src="~/Content/Img/Icons/menu.png" />
                </button>
                @Html.ActionLink("CIT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("ГЛАВНАЯ", "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("О НАС", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="wrapper">
        @RenderBody()
    </div>
    <footer>
        <span>&copy; @DateTime.Now.Year – <b>Сomputer Information Technologies</b></span>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
